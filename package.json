{
  "name": "tft-roller-server",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">= 20"
  },
  "scripts": {
    "start": "nodemon ./src/index.ts",
    "start:prod": "node ./build/tft-roller-server/src/index.js",
    "build": "tsc --project tsconfig.json",
    "postbuild": "tsconfig-replace-paths --project tsconfig.json --out ./build/tft-roller-server",
    "prebuild": "npm run clean",
    "clean": "rimraf build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettify": "npx prettier --write .",
    "fix": "npm run lint -- --fix && npm run prettify",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register test/**_test.ts --exit --timeout 15000",
    "loadtest": "ts-node loadtest/example.ts --room gameRoom --numClients 2"
  },
  "dependencies": {
    "@colyseus/auth": "^0.15.9",
    "@colyseus/core": "^0.15.23",
    "@colyseus/monitor": "^0.15.4",
    "@colyseus/playground": "^0.15.10",
    "@colyseus/schema": "^2.0.26",
    "@colyseus/tools": "^0.15.30",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "nanoid": "~3.3.7",
    "reflect-metadata": "^0.2.1",
    "remeda": "^1.37.0"
  },
  "devDependencies": {
    "@colyseus/loadtest": "^0.15.0",
    "@colyseus/testing": "^0.15.0",
    "@types/express": "^4.17.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-replace-paths": "^0.0.14",
    "typescript": "~5.2.2",
    "utility-types": "^3.11.0"
  }
}
