{
  "name": "tft-roller-server",
  "version": "0.0.1",
  "private": true,
  "main": "build/index.js",
  "engines": {
    "node": ">= 16.13.0"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "prebuild": "npm run clean",
    "clean": "rimraf build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettify": "npx prettier --write .",
    "test": "mocha -r ts-node test/**_test.ts --exit --timeout 15000",
    "loadtest": "ts-node loadtest/example.ts --room gameRoom --numClients 2"
  },
  "dependencies": {
    "@colyseus/monitor": "^0.15.4",
    "@colyseus/playground": "^0.15.10",
    "@colyseus/schema": "^2.0.26",
    "@colyseus/tools": "^0.15.30",
    "colyseus": "^0.15.15",
    "express": "^4.18.2",
    "reflect-metadata": "^0.2.1"
  },
  "devDependencies": {
    "@colyseus/loadtest": "^0.15.0",
    "@colyseus/testing": "^0.15.0",
    "@types/express": "^4.17.1",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "mocha": "^10.2.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^3.12.6",
    "typescript": "^5.3.3"
  }
