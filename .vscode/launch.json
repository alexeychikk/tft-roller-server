  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Dev Server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "start"],
      "console": "integratedTerminal",
      "sourceMaps": true,
      "restart": true,
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Prod Server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "start:prod"],
      "console": "integratedTerminal",
      "sourceMaps": true,
      "restart": true,
      "internalConsoleOptions": "neverOpen",
      "envFile": "${workspaceFolder}/.env.production.local"
    }
  ]
}
